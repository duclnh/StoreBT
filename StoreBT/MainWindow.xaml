<Window x:Class="StoreBT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StoreBT.Views"
        Title="Quản lí cửa hàng"
        Height="700" Width="1250"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <!-- Viền ngoài -->
    <Border CornerRadius="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== HEADER ========== -->
            <Border Grid.Row="0"
                    Background="#2563EB"
                    CornerRadius="15,15,0,0"
                    Height="40"
                    MouseDown="Header_MouseDown">

                <DockPanel LastChildFill="False">
                    <TextBlock Text="🛍️  Quản lí cửa hàng"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               Margin="10,0,0,0"/>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Content="—" Width="40" Background="Transparent" Foreground="White"
                                FontSize="16" BorderBrush="{x:Null}" Cursor="Hand"
                                Click="Minimize_Click"/>
                        <Button Content="&#xE922;" Width="40"
                                FontFamily="Segoe MDL2 Assets"
                                Background="Transparent" Foreground="White"
                                FontSize="16" BorderBrush="{x:Null}" Cursor="Hand"
                                Click="Max_Click"/>
                        <Button Content="✕" Width="40" Background="Transparent" Foreground="White"
                                FontSize="16" BorderBrush="{x:Null}" Cursor="Hand"
                                Click="Close_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- ========== NỘI DUNG ========== -->
            <Border Grid.Row="1" Background="#f9fafb" CornerRadius="0,0,15,15">
                <!-- Hiển thị UserControl HomeView -->
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>
    </Border>
</Window>
