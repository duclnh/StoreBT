<UserControl x:Class="StoreBT.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- ==================== HEADER BAR ==================== -->
        <Grid Margin="25,15,25,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- 🔙 Nút quay lại -->
            <Button Grid.Column="0"
                        Width="100"
                        Height="36"
                        Padding="10,0"
                        Background="#EFF6FF"
                        Foreground="#1D4ED8"
                        BorderBrush="#BFDBFE"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="Back_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="Quay lại"/>
                </StackPanel>
            </Button>
            <!-- 🏷️ Tiêu đề -->
            <TextBlock Grid.Column="1"
                           Text="🛒 Quản lý đơn hàng"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#1E3A8A"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            <!-- ➕ Nút thêm mới -->
            <Button Grid.Column="2"
                        Width="120"
                        Height="36"
                        Background="#2563EB"
                        Foreground="White"
                        BorderBrush="#1E40AF"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="AddOrder_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock Text="Thêm mới"/>
                </StackPanel>
            </Button>
        </Grid>
        <!-- ==================== THANH TÌM KIẾM ==================== -->
        <Border Grid.Row="1"
            Margin="20,20,20,0"
            CornerRadius="10"
            Background="White"
            BorderBrush="#CBD5E1"
            BorderThickness="2"
            Height="36">
            <Grid>
                <TextBox x:Name="txtSearch"
                     BorderThickness="0"
                     Style="{StaticResource PlaceholderTextBox}"
                     Tag="Tìm kiếm"
                     Background="Transparent"
                     Padding="10,5,35,5"
                     TextChanged="txtSearch_TextChanged"/>
            </Grid>
        </Border>

        <!-- ==================== DANH SÁCH SẢN PHẨM ==================== -->
        <DataGrid Grid.Row="2"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          RowHeight="40"
          ColumnHeaderHeight="40"
          Background="White"
          BorderBrush="#E2E8F0"
          AlternatingRowBackground="#F8FAFC"
          SelectionMode="Single"
          FontSize="14"
          IsReadOnly="True"
          x:Name="OrderGrid"
          Margin="20,20,20,0">

            <DataGrid.Columns>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Mã đơn hàng" Binding="{Binding OrderCode}" Width="170"/>

                <!-- Hiển thị tên khách hàng -->
                <!--<DataGridTextColumn Header="Tên Khách hàng" Binding="{Binding CustomerName}" Width="200"/>
                
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding CustomerPhone}" Width="200"/>

                <DataGridTextColumn Header="Ngày đặt" Binding="{Binding OrderDate, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>-->

                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat={}{0:N0} ₫}" Width="150"/>

                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Giảm giá" Binding="{Binding Discount, StringFormat={}{0:N0} ₫}" Width="120"/>

                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Thành tiền" Binding="{Binding FinalAmount    , StringFormat={}{0:N0} ₫}" Width="150"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Ghi chú" Binding="{Binding Notes}" Width="*"/>

                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Ngày tạo" Binding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}" Width="150"/>
                <DataGridTextColumn ElementStyle="{StaticResource CenterTextCell}" Header="Ngày cập nhật" Binding="{Binding UpdatedAt, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}" Width="150"/>

                <!-- 🧩 Cột Thao tác -->
                <DataGridTemplateColumn Header="Thao tác" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,0">

                                <!-- ✏️ Nút Sửa -->
                                <Button Width="26" Height="26"
                                Background="Transparent"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                ToolTip="Chỉnh sửa"
                                Click="Edit_Click">
                                    <Image Source="/Assets/Icons/edit.png" Width="18" Height="18"/>
                                </Button>

                                <!-- ❌ Nút Xóa -->
                                <Button Width="26" Height="26"
                                Background="Transparent"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                ToolTip="Xóa sản phẩm"
                                Click="Delete_Click">
                                    <Image Source="/Assets/Icons/delete.png" Width="18" Height="18"/>
                                </Button>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
