<Window x:Class="StoreBT.Views.BarcodeScannerWindowView"
        Title="Quét mã vạch"
        Width="600" Height="400"
        WindowStartupLocation="CenterOwner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid>
        <!-- Camera feed -->
        <Image x:Name="videoPreview" Stretch="UniformToFill"/>

        <!-- Khung quét với Canvas chứa line -->
        <Canvas Width="450" Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Rectangle x:Name="scanFrame"
                       Width="450"
                       Height="200"
                       Stroke="Red"
                       StrokeThickness="3"
                       RadiusX="10"
                       RadiusY="10"/>

            <!-- Line quét -->
            <Rectangle x:Name="scanLine"
                       Width="400"
                       Height="2"
                       Fill="Lime" HorizontalAlignment="Left" Canvas.Left="25" VerticalAlignment="Center">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="scanLineTransform"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>

        <!-- Text hiển thị barcode -->
        <TextBlock x:Name="txtResult" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,20"
                   FontSize="16" 
                   Foreground="Lime"
                   FontWeight="Bold"/>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                    <DoubleAnimation
                        Storyboard.TargetName="scanLineTransform"
                        Storyboard.TargetProperty="Y"
                        From="0"
                        To="198"
                        Duration="0:0:2"
                        RepeatBehavior="Forever"
                        AutoReverse="True"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>

